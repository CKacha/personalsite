---
import "../styles/global.css";
import Topbar from "../components/Topbar.astro";
const BASE = import.meta.env.BASE_URL;
---

<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${BASE}favicon.svg`} />
    <link rel="shortcut icon" type="image/svg+xml" href={`${BASE}favicon.svg`} />
    <title>alive — logbook</title>
  </head>
  <body>
    <Topbar />
    <main class="wrap">
      <h1>logbook</h1>
      <p class="muted">Leave a note—your name + a short message.</p>

      <form id="guestForm" class="block-form">
        <div class="row">
          <label class="label" for="name">name</label>
          <input id="name" name="name" required maxlength="50" />
        </div>
        <div class="row">
          <label class="label" for="msg">message</label>
          <textarea id="msg" name="msg" rows="4" required maxlength="500"></textarea>
        </div>

        <input type="text" id="website" name="website" style="position:absolute;left:-5000px;top:auto;width:1px;height:1px;opacity:0;" tabindex="-1" aria-hidden="true" />

        <button type="submit" class="invert-btn">submit</button>
        <span id="status" class="muted" style="margin-left:8px;"></span>
      </form>

      <section style="margin-top:24px">
        <h2>entries</h2>
        <div id="entries" class="cards"></div>
      </section>
    </main>

    <script type="module" is:inline>
      import { initializeApp } from "https://www.gstatic.com/firebasejs/10.13.2/firebase-app.js";
      import {
        getFirestore, collection, addDoc, serverTimestamp,
        query, orderBy, limit, onSnapshot
      } from "https://www.gstatic.com/firebasejs/10.13.2/firebase-firestore.js";

      const firebaseConfig = {
        apiKey: "AIzaSyBvuYLTvjqIxX3VLLcYADPSd9XRiEI82Vs",
        authDomain: "personalsite-bc085.firebaseapp.com",
        projectId: "personalsite-bc085",
        storageBucket: "personalsite-bc085.appspot.com",
        messagingSenderId: "1085232199709",
        appId: "1:1085232199709:web:55a8babd5d03bfa5eb2ef4",
        measurementId: "G-HCLV3WMMX9"
      };

      const app = initializeApp(firebaseConfig);
      const db  = getFirestore(app);
      const col = collection(db, "guestbook");

      const q = query(col, orderBy("createdAt", "desc"), limit(100));

      const entriesEl = document.getElementById("entries");
      const statusEl  = document.getElementById("status");
      const formEl    = document.getElementById("guestForm");
      const nameEl    = document.getElementById("name");
      const msgEl     = document.getElementById("msg");
      const trapEl    = document.getElementById("website"); // honeypot

      function escapeHtml(s) {
        return String(s).replace(/[&<>"']/g, (c) => ({
          "&":"&amp;","<":"&lt;",">":"&gt;",'"':"&quot;","'":"&#39;"
        }[c]));
      }

      function cardHTML({ name, message, createdAt }) {
        const when = createdAt?.toDate ? createdAt.toDate() : new Date();
        const date = when.toLocaleDateString();
        return `
          <article class="card">
            <div class="repo-title">${escapeHtml(name || "someone")}</div>
            <div class="repo-desc">${escapeHtml(message || "").replace(/\n/g,"<br>")}</div>
            <div class="repo-meta"><span>${date}</span></div>
          </article>
        `;
      }

      onSnapshot(q, (snap) => {
        if (snap.empty) {
          entriesEl.innerHTML = "<p class='muted'>Be the first to sign.</p>";
          return;
        }
        entriesEl.innerHTML = snap.docs.map(d => cardHTML(d.data())).join("");
      }, (err) => {
        entriesEl.textContent = "Failed to load entries.";
        console.error(err);
      });

      formEl?.addEventListener("submit", async (e) => {
        e.preventDefault();
        statusEl.textContent = "";

        if (trapEl && trapEl.value.trim()) return; // bot trap

        const name = (nameEl.value || "").trim();
        const msg  = (msgEl.value  || "").trim();
        if (!name || !msg) return;

        try {
          if (name.length > 50 || msg.length > 500) throw new Error("Too long.");

          await addDoc(col, {
            name,
            message: msg,
            createdAt: serverTimestamp(),
          });

          msgEl.value = "";
          statusEl.textContent = "Sent!";
          setTimeout(() => statusEl.textContent = "", 1500);
        } catch (err) {
          console.error(err);
          statusEl.textContent = "Failed to send.";
        }
      });
    </script>

    <footer class="site-footer">made with astro + Need coffee</footer>
  </body>
</html>
